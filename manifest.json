{
  "name": "Clippy",
  "description": "Save your favorite links and copy them instantly from Chrome's side panel.",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Clippy",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html",
    "default_title": "Clippy"
  },
  "permissions": ["clipboardWrite", "sidePanel", "storage"]
} 